<div class="container">
  <h1 class="text-center mt-5 mb-2">質問投稿</h1>
　<%= form_with(model: @question, url: board_questions_path(@board.id), local: true) do |form| %>
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <div class="form-group">
          <%= form.label :タイトル, class: "font-weight-bold" %>
          <%= form.text_field :title, class: "form-control", placeholder: "質問のタイトルを入力してください" %>
        </div>

        <div class="form-group">
          <%= form.label :質問内容, class: "font-weight-bold mt-4" %>
          <%= form.text_area :content, class: "form-control", rows: 5, placeholder: "質問の内容を入力してください" %>
        </div>

        <div class="text-center mt-5">
          <%= form.submit "質問する", class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
