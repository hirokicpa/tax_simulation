<div class="container py-4">
  <h2 class="text-center mt-5">アカウント編集</h2>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'border rounded p-5 bg-white shadow'}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email, class: "font-weight-bold" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>現在のメールアドレス: <%= resource.unconfirmed_email %></div>
        <% end %>
        
        <div class="form-group mb-4">
          <%= f.label :姓, class: "font-weight-bold" %>
          <%= f.text_field :first_name, class: "form-control", placeholder: "姓を入力", required: true %>
        </div>
        
        <div class="form-group mb-4">
          <%= f.label :名, class: "font-weight-bold" %>
          <%= f.text_field :last_name, class: "form-control", placeholder: "名を入力", required: true %>
        </div>
        
        <div class="form-group mb-4">
          <%= f.label :職業, class: "font-weight-bold", style: "width: 100px; height: 30px; display: inline-block;" %></br>
          <%= f.select :occupation, ['金融', '営業', 'エンジニア', '経理・財務', '法務', '専門職', 'その他'], prompt: '職業を選択してください', required: true, class: "form-control" %>
        </div>
        
        <div class="form-group mb-4">
          <%= f.label :年代, class: "font-weight-bold", style: "width: 100px; height: 30px; display: inline-block;" %></br>
          <%= f.select :age, ['20代', '30代', '40代', '50代以上'], prompt: '年代を選択してください', class: "form-control", style: "width: 400px; height: 30px;" %>
        </div>


        <div class="form-group mt-3">
          <%= f.label :password, class: "font-weight-bold" %> <i>(変更しない場合は空白のままにしてください)</i>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %>文字以上</em>
          <% end %>
        </div>

        <div class="form-group mt-3">
          <%= f.label :password_confirmation, class: "font-weight-bold" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group mt-3">
          <%= f.label :current_password, class: "font-weight-bold" %> <i>(変更を確認するため現在のパスワードが必要です)</i>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="form-group mt-4">
          <%= f.label :avatar, class: "font-weight-bold" %>
          <%= f.file_field :avatar, class: "form-control", accept: "image/*" %>
        </div>

        <div class="text-center mt-5">
          <%= f.submit "更新", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "掲示板で質問した内容とそれに関連する回答も全て削除されます。本当によろしいですか？", turbo_confirm: "本当によろしいですか？" }, method: :delete, class: "btn btn-danger" %>
      </div>

      <div class="text-center mt-3">
        <%= link_to "戻る", :back, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>

